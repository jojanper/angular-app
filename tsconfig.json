{
  "compileOnSave": false,
  "preserveWhitespaces": "off",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "simple-peer": [
        "../node_modules/simple-peer/simplepeer.min.js"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableIvy": false
  }
}
